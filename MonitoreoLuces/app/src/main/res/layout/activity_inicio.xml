<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#053131"
    tools:context=".Inicio">


    <EditText
        android:id="@+id/ip_panel"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:hint="@string/ip_panel"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginTop="46dp"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/port"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:hint="@string/port"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:layout_below="@+id/ip_panel"
        android:layout_alignLeft="@+id/ip_panel"
        android:layout_alignStart="@+id/ip_panel"
        android:layout_marginTop="33dp" />

    <EditText
        android:id="@+id/ip_server"
        android:hint="@string/ip_servidor"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:layout_marginBottom="46dp"
        android:layout_above="@+id/conexion"
        android:layout_alignLeft="@+id/conexion"
        android:layout_alignStart="@+id/conexion" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/conexion"
        android:text="Conectar"
        android:textColor="#000000"
        android:textSize="25sp"
        android:background="@drawable/buttonshape"
        android:layout_marginBottom="42dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/port"
        android:layout_alignStart="@+id/port"
        android:layout_alignRight="@+id/port"
        android:layout_alignEnd="@+id/port" />



    <TextView
        android:id="@+id/response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</RelativeLayout>


