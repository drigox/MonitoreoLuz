<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#053131"
    tools:context=".Inicio">


    <EditText
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/ip"
        android:textSize="30dp"
        android:hint="@string/ip"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginTop="106dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:imeOptions="actionDone"
        android:singleLine="true"/>

    <EditText
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/port"
        android:textSize="30dp"
        android:hint="@string/port"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/ip"
        android:layout_alignStart="@+id/ip" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/conexion"
        android:text="Conectar"
        android:textColor="#000000"
        android:textSize="25sp"
        android:background="@drawable/botonpresionado"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/ip"
        android:layout_alignStart="@+id/ip"
        android:layout_marginBottom="99dp"
        android:layout_alignRight="@+id/port"
        android:layout_alignEnd="@+id/port" />


    <TextView
        android:id="@+id/response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingrese la IP del panel que desea monitorear"
        android:id="@+id/text0"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/ip"
        android:layout_alignStart="@+id/ip"
        android:layout_alignRight="@+id/ip"
        android:layout_alignEnd="@+id/ip" />



</RelativeLayout>


